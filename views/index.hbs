    <!--CARD-->

    <!--CARDs PROJECT-->
    <div class="cardbg">
      <div><h2>MY PROJECT</h2></div>
    <div class="row row-cols-1 row-cols-md-3 g-4 cardproject">
      <!--dynamic content would be here-->
      {{#each blogs}}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <a href="" target="_blank">
              <img src="/uploads/{{this.image}}" class="card-img-top" style="height: 220px;" alt="a">
            </a>
            <div class="card-body">
              <a href="/home/{{this.id}}" target="_blank"><h5 class="card-title">{{this.name}}</h5></a>
              <p class="card-text"><small class="text-muted">{{this.post_at}} || {{this.name1}}</small></p>
              <p class="crd-txt">{{this.description}}</p>
              <div class="logo">
                <img src="{{this.technologies.[0]}}">
                <img src="{{this.technologies.[1]}}">
                <img src="{{this.technologies.[2]}}">
                <img src="{{this.technologies.[3]}}">
              </div>
              {{#if isLogin}}
              <div class="d-flex gap-2">
                <a href="/blog-edit/{{this.id}}" class="btn btn-dark" >Edit</a>
                <a href="/blog-delete/{{this.id}}" class="btn btn-dark" onclick="if (!confirm('Are you sure?')) { return false }">Delete</a>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
        {{/each}}
        

        
    </div>
    </div>
